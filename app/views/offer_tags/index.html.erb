<div class="page-header">
  <h1>
    Offer tags
    <a href="/offer_tags/new" class="btn btn-lg btn-success">New Offer tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Offer</th>
        <th>Tag</th>
        <th>Actions</th>
      </tr>

      <% @offer_tags.each do |offer_tag| %>
      <tr>
        <td>
          <% if offer_tag.offer.present? %>
            <a href="/offers/<%= offer_tag.offer.id %>">
              <%= offer_tag.offer.counselor_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if offer_tag.tag.present? %>
            <a href="/tags/<%= offer_tag.tag.id %>">
              <%= offer_tag.tag.tag %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/offer_tags/<%= offer_tag.id %>" class="btn btn-primary">Show</a>
          <a href="/offer_tags/<%= offer_tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_offer_tag/<%= offer_tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @offer_tags, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
