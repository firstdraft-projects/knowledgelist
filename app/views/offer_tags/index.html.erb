<div class="page-header">
  <h1>
    Offer tags
    <a href="/offer_tags/new" class="btn btn-lg btn-success">New Offer tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Offer</th>
        <th>Tag</th>
        <th>Actions</th>
      </tr>

      <% @offer_tags.each do |offer_tag| %>
      <tr>
        <td><%= offer_tag.offer.counselor_id %></td>
        <td><%= offer_tag.tag_id %></td>
        <td>
          <a href="/offer_tags/<%= offer_tag.id %>" class="btn btn-primary">Show</a>
          <a href="/offer_tags/<%= offer_tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_offer_tag/<%= offer_tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
