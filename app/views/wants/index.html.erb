<div class="page-header">
  <h1>
    Wants
    <a href="/wants/new" class="btn btn-lg btn-success">New Want</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Wants</th>
        <th>Actions</th>
      </tr>

      <% @wants.each do |want| %>
      <tr>
        <td><%= want.user.created_at %></td>
        <td><%= want.wants %></td>
        <td>
          <a href="/wants/<%= want.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == want.user %>
            <a href="/wants/<%= want.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_want/<%= want.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @wants, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
