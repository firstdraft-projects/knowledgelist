<div class="page-header">
  <h1>
    Want tags
    <a href="/want_tags/new" class="btn btn-lg btn-success">New Want tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Want</th>
        <th>Tag</th>
        <th>Actions</th>
      </tr>

      <% @want_tags.each do |want_tag| %>
      <tr>
        <td><%= want_tag.want.user_id %></td>
        <td><%= want_tag.tag_id %></td>
        <td>
          <a href="/want_tags/<%= want_tag.id %>" class="btn btn-primary">Show</a>
          <a href="/want_tags/<%= want_tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_want_tag/<%= want_tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
