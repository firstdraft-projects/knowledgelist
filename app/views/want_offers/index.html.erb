<div class="page-header">
  <h1>
    Want offers
    <a href="/want_offers/new" class="btn btn-lg btn-success">New Want offer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Offer</th>
        <th>Want</th>
        <th>Match</th>
        <th>Actions</th>
      </tr>

      <% @want_offers.each do |want_offer| %>
      <tr>
        <td>
          <% if want_offer.offer.present? %>
            <a href="/offers/<%= want_offer.offer.id %>">
              <%= want_offer.offer.counselor_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if want_offer.want.present? %>
            <a href="/wants/<%= want_offer.want.id %>">
              <%= want_offer.want.user_id %>
            </a>
          <% end %>
        </td>
        <td><%= want_offer.match %></td>
        <td>
          <a href="/want_offers/<%= want_offer.id %>" class="btn btn-primary">Show</a>
          <a href="/want_offers/<%= want_offer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_want_offer/<%= want_offer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @want_offers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
