<!-- Validation failure messages -->
<% if @offer_tag.errors.any? %>
  <% @offer_tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Offer Tag #<%= @offer_tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_offer_tag/<%= @offer_tag.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for offer_id -->
      <div class="form-group">
        <label for="offer_id" class="control-label">
          Offer
        </label>

        <input type="text" id="offer_id" name="offer_id" placeholder="Offer" class="form-control" value="<%= @offer_tag.offer_id %>">
      </div>

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <input type="text" id="tag_id" name="tag_id" placeholder="Tag" class="form-control" value="<%= @offer_tag.tag_id %>">
      </div>

      <button class="btn btn-warning">
        Update Offer Tag
      </button>
      or
      <a href="/offer_tags/<%= @offer_tag.id %>">Cancel</a>
    </form>
  </div>
</div>
